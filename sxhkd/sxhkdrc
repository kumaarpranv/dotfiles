# Brightness up
XF86MonBrightnessUp
  xbacklight -inc 5

# And brightness down
XF86MonBrightnessDown
  xbacklight -dec 5

# Screenshot
Print
  scrot "$(xdg-user-dir PICTURES)/screenshot-$(date +%F_%T).png"

super + Print
  ~/.config/bspwm/scripts/screenshot.sh

# Shortcuts
super + w 
  firefox

super + n 
  nemo  

super + F1
  ~/.config/bspwm/scripts/keybindings_rofi.sh

#ctrl + space
#  albert show
